class Solution {
    public boolean isPowerOfFour(int num) {
       if (num<=0)
            return false;
        return (num&num-1)==0&&(num&0x55555555)==num;
    }
}
/*

二进制4：        0000	0000	0000	0000	0000	0000	0000	0100
二进制16：	0000	0000	0000	0000	0000	0000	0001	0000
二进制64：	0000	0000	0000	0000	0000	0000	0100	0000
二进制256：	0000	0000	0000	0000	0000	0001	0000	0000

0x55555555：	0101	0101	0101	0101	0101	0101	0101	0101

*/
